<%= form_with model: @school, url: @school.persisted? ? admin_v2_school_path(@school) : admin_v2_schools_path, builder: AdminV2::FormBuilder, class: "space-y-6" do |f| %>
  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-lg">
    <div class="px-6 py-6">
      <h3 class="text-lg font-medium text-gray-900 mb-6">School Details</h3>

      <%= f.text_field :name,
                       label: "Name",
                       hint: "Enter the school name",
                       placeholder: "Lincoln Elementary School" %>
    </div>
  </div>

  <div class="flex items-center justify-end gap-x-4">
    <%= f.cancel_button "Cancel", url: @school.persisted? ? admin_v2_school_path(@school) : admin_v2_schools_path %>
    <%= f.submit_button @school.persisted? ? "Update School" : "Create School" %>
  </div>
<% end %>
