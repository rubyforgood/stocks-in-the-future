<% if collection.respond_to?(:total_pages) && collection.total_pages > 1 %>
  <nav class="flex items-center justify-between" aria-label="Pagination">
    <div class="hidden sm:block">
      <p class="text-sm text-gray-700">
        Showing
        <span class="font-medium"><%= collection.offset_value + 1 %></span>
        to
        <span class="font-medium"><%= [collection.offset_value + collection.limit_value, collection.total_count].min %></span>
        of
        <span class="font-medium"><%= collection.total_count %></span>
        results
      </p>
    </div>
    <div class="flex flex-1 justify-between sm:justify-end">
      <% if collection.prev_page %>
        <%= link_to "Previous", request.params.merge(page: collection.prev_page), class: "relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <% else %>
        <span class="relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-400 bg-gray-100 cursor-not-allowed">
          Previous
        </span>
      <% end %>

      <% if collection.next_page %>
        <%= link_to "Next", request.params.merge(page: collection.next_page), class: "ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
      <% else %>
        <span class="ml-3 relative inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-400 bg-gray-100 cursor-not-allowed">
          Next
        </span>
      <% end %>
    </div>
  </nav>
<% end %>
