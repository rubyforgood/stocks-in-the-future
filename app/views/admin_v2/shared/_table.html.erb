<div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-lg overflow-hidden">
  <% if local_assigns[:title] || local_assigns[:actions] %>
    <div class="px-4 py-5 sm:px-6 border-b border-gray-200 flex justify-between items-center">
      <% if local_assigns[:title] %>
        <h3 class="text-lg font-semibold text-gray-900"><%= title %></h3>
      <% end %>
      <% if local_assigns[:actions] %>
        <div class="flex gap-2">
          <%= actions %>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="overflow-x-auto">
    <table class="min-w-full divide-y divide-gray-300">
      <thead class="bg-gray-50">
        <tr>
          <% columns.each do |column| %>
            <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">
              <% if column[:sortable] %>
                <%= sort_link(column[:attribute], column[:label]) %>
              <% else %>
                <%= column[:label] %>
              <% end %>
            </th>
          <% end %>
          <% if options[:show_actions] != false %>
            <th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
              <span class="sr-only">Actions</span>
            </th>
          <% end %>
        </tr>
      </thead>
      <tbody class="divide-y divide-gray-200 bg-white">
        <% if collection.any? %>
          <% collection.each do |record| %>
            <tr id="<%= dom_id(record) %>" class="hover:bg-gray-50 transition-colors">
              <% columns.each do |column| %>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-900" data-testid="<%= column[:attribute] %>">
                  <% if column[:link] %>
                    <%= link_to format_attribute(record, column[:attribute]), [:admin_v2, route_model(record)], class: "text-blue-600 hover:text-blue-800 font-medium" %>
                  <% else %>
                    <%= format_attribute(record, column[:attribute]) %>
                  <% end %>
                </td>
              <% end %>
              <% if options[:show_actions] != false %>
                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                  <div class="flex justify-end gap-2">
                    <%= link_to "View", [:admin_v2, route_model(record)], class: "text-blue-600 hover:text-blue-800" %>
                    <%= link_to "Edit", [:edit, :admin_v2, route_model(record)], class: "text-gray-600 hover:text-gray-800" %>
                    <%= link_to "Delete", [:admin_v2, route_model(record)],
                                data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                                class: "text-red-600 hover:text-red-800" %>
                  </div>
                </td>
              <% end %>
            </tr>
          <% end %>
        <% else %>
          <tr>
            <td colspan="<%= columns.length + (options[:show_actions] == false ? 0 : 1) %>" class="px-3 py-12 text-center text-sm text-gray-500">
              <div class="flex flex-col items-center">
                <i class="fas fa-inbox text-4xl text-gray-300 mb-3"></i>
                <p class="font-medium">No records found</p>
                <% if options[:empty_message] %>
                  <p class="text-gray-400 mt-1"><%= options[:empty_message] %></p>
                <% end %>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if collection.respond_to?(:total_pages) && collection.total_pages > 1 %>
    <div class="px-4 py-3 border-t border-gray-200 sm:px-6">
      <%= render "admin_v2/shared/pagination", collection: collection %>
    </div>
  <% end %>
</div>
