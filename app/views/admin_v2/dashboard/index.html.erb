<div class="max-w-7xl mx-auto">
  <div class="mb-6">
    <h1 class="text-3xl font-bold text-gray-900">Admin Dashboard</h1>
    <p class="text-gray-600 mt-2">Welcome to the in-house admin interface</p>
  </div>

  <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 mb-6">
    <div class="flex items-start">
      <i class="fas fa-info-circle text-blue-600 mt-1 mr-3"></i>
      <div>
        <h3 class="font-semibold text-blue-900 mb-1">Dual-Running Mode</h3>
        <p class="text-sm text-blue-800">
          This is the new in-house admin interface. The existing Administrate admin is still available at
          <%= link_to "/admin", admin_root_path, class: "font-medium underline hover:text-blue-900" %>.
          Resources will be migrated incrementally.
        </p>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <!-- Academic Resources -->
    <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
      <div class="flex items-center mb-4">
        <i class="fas fa-graduation-cap text-blue-600 text-2xl mr-3"></i>
        <h2 class="text-lg font-semibold text-gray-900">Academic</h2>
      </div>
      <ul class="space-y-2 text-sm">
        <li>
          <%= link_to admin_v2_classrooms_path, class: "text-blue-600 hover:text-blue-800 hover:underline" do %>
            <i class="fas fa-chalkboard w-4 mr-2"></i>Classrooms
          <% end %>
        </li>
        <li>
          <%= link_to admin_v2_schools_path, class: "text-blue-600 hover:text-blue-800 hover:underline" do %>
            <i class="fas fa-school w-4 mr-2"></i>Schools
          <% end %>
        </li>
        <li>
          <%= link_to admin_v2_years_path, class: "text-blue-600 hover:text-blue-800 hover:underline" do %>
            <i class="fas fa-calendar-alt w-4 mr-2"></i>School Years
          <% end %>
        </li>
        <li>
          <%= link_to admin_v2_grades_path, class: "text-blue-600 hover:text-blue-800 hover:underline" do %>
            <i class="fas fa-graduation-cap w-4 mr-2"></i>Grades
          <% end %>
        </li>
      </ul>
    </div>

    <!-- User Management -->
    <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
      <div class="flex items-center mb-4">
        <i class="fas fa-users text-green-600 text-2xl mr-3"></i>
        <h2 class="text-lg font-semibold text-gray-900">User Management</h2>
      </div>
      <ul class="space-y-2 text-sm">
        <li>
          <%= link_to admin_v2_students_path, class: "text-blue-600 hover:text-blue-800 hover:underline" do %>
            <i class="fas fa-user-graduate w-4 mr-2"></i>Students
          <% end %>
        </li>
        <li>
          <%= link_to admin_v2_teachers_path, class: "text-blue-600 hover:text-blue-800 hover:underline" do %>
            <i class="fas fa-chalkboard-teacher w-4 mr-2"></i>Teachers
          <% end %>
        </li>
        <li>
          <%= link_to admin_v2_users_path, class: "text-blue-600 hover:text-blue-800 hover:underline" do %>
            <i class="fas fa-users w-4 mr-2"></i>Users
          <% end %>
        </li>
      </ul>
    </div>

    <!-- Portfolio & Finance -->
    <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
      <div class="flex items-center mb-4">
        <i class="fas fa-chart-line text-purple-600 text-2xl mr-3"></i>
        <h2 class="text-lg font-semibold text-gray-900">Portfolio & Finance</h2>
      </div>
      <ul class="space-y-2 text-sm text-gray-600">
        <li><i class="fas fa-chart-line w-4 mr-2"></i>Stocks</li>
        <li><i class="fas fa-exchange-alt w-4 mr-2"></i>Portfolio Transactions</li>
      </ul>
    </div>

    <!-- Content -->
    <div class="bg-white rounded-lg shadow p-6 border border-gray-200">
      <div class="flex items-center mb-4">
        <i class="fas fa-bullhorn text-orange-600 text-2xl mr-3"></i>
        <h2 class="text-lg font-semibold text-gray-900">Content</h2>
      </div>
      <ul class="space-y-2 text-sm">
        <li>
          <%= link_to admin_v2_announcements_path, class: "text-blue-600 hover:text-blue-800 hover:underline" do %>
            <i class="fas fa-bullhorn w-4 mr-2"></i>Announcements
          <% end %>
        </li>
      </ul>
    </div>
  </div>

  <div class="mt-8 bg-yellow-50 border border-yellow-200 rounded-lg p-4">
    <div class="flex items-start">
      <i class="fas fa-exclamation-triangle text-yellow-600 mt-1 mr-3"></i>
      <div>
        <h3 class="font-semibold text-yellow-900 mb-1">Development Status</h3>
        <p class="text-sm text-yellow-800">
          Resource pages are being built incrementally. Use the sidebar navigation to access completed resources.
          Links marked with "#" are not yet implemented.
        </p>
      </div>
    </div>
  </div>
</div>
