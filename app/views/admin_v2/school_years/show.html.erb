<div class="max-w-7xl mx-auto">
  <%= admin_breadcrumbs(@breadcrumbs) %>

  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-lg mb-6">
    <div class="px-6 py-6">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-gray-900"><%= SchoolYearPresenter.new(@school_year).display_name %></h2>
        <div class="flex gap-3">
          <%= link_to edit_admin_v2_school_year_path(@school_year),
                      class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <i class="fas fa-edit -ml-1 mr-2 h-5 w-5 text-gray-500"></i>
            Edit
          <% end %>
          <%= link_to admin_v2_school_year_path(@school_year),
                      data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this school year?" },
                      class: "inline-flex items-center px-4 py-2 border border-red-300 shadow-sm text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" do %>
            <i class="fas fa-trash -ml-1 mr-2 h-5 w-5 text-red-500"></i>
            Delete
          <% end %>
        </div>
      </div>

      <%= admin_show_attributes(
            @school_year,
            attributes: %i[id school year created_at updated_at]
          ) %>

      <!-- Associated Classrooms -->
      <% if @school_year.classrooms.any? %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-500 mb-3">Classrooms (<%= @school_year.classrooms.count %>)</h3>
          <ul class="space-y-2">
            <% @school_year.classrooms.limit(10).each do |classroom| %>
              <li class="text-sm text-gray-900">
                <%= classroom.name %>
              </li>
            <% end %>
            <% if @school_year.classrooms.count > 10 %>
              <li class="text-sm text-gray-500">
                ... and <%= @school_year.classrooms.count - 10 %> more
              </li>
            <% end %>
          </ul>
        </div>
      <% else %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <p class="text-sm text-gray-500">No classrooms associated with this school year yet.</p>
        </div>
      <% end %>

      <!-- Associated Quarters -->
      <% if @school_year.quarters.any? %>
        <div class="mt-6 pt-6 border-t border-gray-200">
          <h3 class="text-sm font-medium text-gray-500 mb-3">Quarters</h3>
          <ul class="space-y-2">
            <% @school_year.quarters.order(:number).each do |quarter| %>
              <li class="text-sm text-gray-900">
                <%= quarter.name %>
              </li>
            <% end %>
          </ul>
        </div>
      <% end %>
    </div>
  </div>

  <div class="flex gap-3">
    <%= link_to "Back to School Years", admin_v2_school_years_path,
                class: "inline-flex items-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
  </div>
</div>
