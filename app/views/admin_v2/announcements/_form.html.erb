<%= form_with model: @announcement, url: @announcement.persisted? ? admin_v2_announcement_path(@announcement) : admin_v2_announcements_path, builder: AdminV2::FormBuilder, class: "space-y-6" do |f| %>
  <div class="bg-white shadow-sm ring-1 ring-gray-900/5 rounded-lg">
    <div class="px-6 py-6">
      <h3 class="text-lg font-medium text-gray-900 mb-6">Announcement Details</h3>

      <%= f.text_field :title,
                       label: "Title",
                       hint: "Enter the announcement title (max 255 characters)",
                       placeholder: "Important Update" %>

      <%= f.rich_text_area :content,
                           label: "Content",
                           hint: "Write the full announcement content" %>

      <%= f.boolean_field :featured,
                          label: "Featured",
                          hint: "Only one announcement can be featured at a time. Featuring this will unfeature the current one." %>
    </div>
  </div>

  <div class="flex items-center justify-end gap-x-4">
    <%= f.cancel_button "Cancel", url: @announcement.persisted? ? admin_v2_announcement_path(@announcement) : admin_v2_announcements_path %>
    <%= f.submit_button @announcement.persisted? ? "Update Announcement" : "Create Announcement" %>
  </div>
<% end %>
