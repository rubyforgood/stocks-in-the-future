<% content_for :title, @announcement.title %>

<div class="max-w-[1180px] mx-auto space-y-6 pb-16" style="font-family: Inter, system-ui, sans-serif;">
  <% if notice.present? %>
    <div class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></div>
  <% end %>

  <!-- Announcement Content Card -->
  <div class="rounded-xl border-2 border-black bg-white overflow-hidden">
    <div class="bg-teal-500 text-white py-4 px-6 font-semibold text-lg tracking-wide border-b-2 border-black">
      <%= @announcement.title %>
    </div>
    <div class="p-8">
      <div class="trix-content text-gray-700 leading-relaxed">
        <%= @announcement.content %>
      </div>

      <div class="mt-8 pt-6 border-t border-gray-200">
        <%= link_to "Back", :back, class: "inline-flex items-center rounded-md px-4 py-2.5 bg-gray-100 hover:bg-gray-50 font-medium text-gray-700 transition-colors" %>
      </div>
    </div>
  </div>
</div>
